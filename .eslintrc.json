{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended",
        "plugin:import/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "requireConfigFile": false
    },
    "plugins": ["vue", "html", "import", "prettier"],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ]
    },
    "overrides": [
        {
            "files": ["**/*.vue"],
            "parser": "vue-eslint-parser",
            "parserOptions": {
                "ecmaVersion": 13
            }
        }
    ],
    "globals": {
        "defineProps": "readonly",
        "defineEmits": "readonly"
    }
}
